{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "useDefineForClassFields": false,
    "typeRoots": [
      "./node_modules/@types",
    ],
    "lib": [
      "es2019",
      "dom"
    ],
    "outDir": "lib"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}